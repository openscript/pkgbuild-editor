  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
          "exec",
          "nx",
          "run-many",
          "--target=test",
          "--parallel",
          "--output-style=stream",
          "--skip-nx-cache"
      ],
      "outputCapture": "std"
    }
  ]
}
